{
  "name": "go-to-docs",
  "version": "1.0.0",
  "description": "A centralized resource for reusable practices, team knowledge, and decision-making frameworks.",
  "type": "module",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs --port 5173",
    "guard": "node scripts/guard.mjs",
    "stale": "node scripts/stale.mjs",
    "changelog:preview": "node scripts/changelog.mjs preview",
    "changelog:finalize": "node scripts/changelog.mjs finalize",
    "changelog:add": "node scripts/changelog.mjs add",
    "test": "node --test tests/*.test.mjs && vitest run",
    "test:unit": "node --test tests/*.test.mjs",
    "test:components": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run guard && npm run docs:build",
    "ci": "npm run validate && npm test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "docs/**/*.md": [
      "node scripts/guard.mjs"
    ]
  },
  "keywords": [
    "documentation",
    "vitepress",
    "knowledge-base",
    "governance"
  ],
  "author": "Louis Opheim",
  "license": "SEE LICENSE FILES",
  "repository": {
    "type": "git",
    "url": "https://github.com/lop-Louis/go-to-docs.git"
  },
  "bugs": {
    "url": "https://github.com/lop-Louis/go-to-docs/issues"
  },
  "homepage": "https://lop-Louis.github.io/go-to-docs",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^4.0.6",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "gray-matter": "^4.0.3",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "vitepress": "^1.3.4",
    "vitest": "^4.0.6",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "vue": "^3.5.22"
  }
}
