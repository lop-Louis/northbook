{
  "name": "northbook",
  "version": "1.0.0",
  "description": "Northbook â€” public-safe guidance, principles, and patterns.",
  "type": "module",
  "scripts": {
    "build": "pnpm run docs:build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "RELEASE_TAG=$(git describe --tags --abbrev=0 2>/dev/null || echo dev) node scripts/docs-build.mjs",
    "docs:preview": "vitepress preview docs --port 5173",
    "docs:guard": "pnpm run frontmatter:lint && pnpm run guard && pnpm run drift && pnpm run ux:scan",
    "guard": "node scripts/guard.mjs",
    "labs": "node scripts/run-labs.mjs",
    "lint:md": "markdownlint \"**/*.md\" --config .markdownlint.jsonc",
    "lint:md:fix": "markdownlint \"**/*.md\" --config .markdownlint.jsonc --fix",
    "fingerprint": "node scripts/build-fingerprint.mjs",
    "should-build": "node scripts/should-build.mjs",
    "freeze:check": "node scripts/freeze-manager.mjs check",
    "freeze:verify": "node scripts/freeze-manager.mjs verify-file",
    "freeze:status": "node scripts/freeze-manager.mjs status",
    "frontmatter:lint": "node scripts/frontmatter-lint.mjs",
    "nav:sync": "node scripts/sync-navigation.mjs",
    "readme:sync": "node scripts/sync-readme.mjs",
    "drift": "node scripts/drift.mjs",
    "stale": "node scripts/stale.mjs",
    "changelog:preview": "node scripts/changelog.mjs preview",
    "changelog:finalize": "node scripts/changelog.mjs finalize",
    "changelog:add": "node scripts/changelog.mjs add",
    "test": "pnpm run test:unit && pnpm run test:components",
    "test:unit": "node --test tests/*.test.mjs",
    "test:components": "vitest run tests/components tests/accessibility",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "pnpm run lint:md && eslint . && prettier --check .",
    "lint:fix": "pnpm run lint:md:fix && eslint . --fix && prettier --write .",
    "typecheck": "tsc --noEmit",
    "lighthouse": "node scripts/lighthouse-runner.mjs",
    "review:update": "node scripts/update-last-reviewed.mjs",
    "ux:scan": "node scripts/ux-scan.mjs",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --config .markdownlint.jsonc --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "docs/**/*.md": [
      "node scripts/guard.mjs",
      "pnpm run nav:sync && git add docs/.vitepress/navigation.generated.ts"
    ],
    "runbooks/**/*.md": [
      "node scripts/guard.mjs",
      "pnpm run nav:sync && git add docs/.vitepress/navigation.generated.ts"
    ],
    "scripts/scripts-meta.json": [
      "pnpm run readme:sync && git add README.md"
    ]
  },
  "keywords": [
    "documentation",
    "vitepress",
    "knowledge-base",
    "governance"
  ],
  "author": "Louis Opheim",
  "license": "SEE LICENSE FILES",
  "repository": {
    "type": "git",
    "url": "https://github.com/lop-louis/northbook.git"
  },
  "bugs": {
    "url": "https://github.com/lop-louis/northbook/issues"
  },
  "homepage": "https://lop-louis.github.io/northbook",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^4.0.6",
    "@vue/test-utils": "^2.4.6",
    "ajv": "^8.17.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "gray-matter": "^4.0.3",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lighthouse": "^12.2.1",
    "lint-staged": "^16.2.6",
    "markdownlint": "^0.39.0",
    "markdownlint-cli": "^0.45.0",
    "playwright": "^1.48.2",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2",
    "vitepress": "^1.3.4",
    "vitest": "^4.0.6",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "vue": "^3.5.22"
  },
  "packageManager": "pnpm@9.0.0+sha512.b4106707c7225b1748b61595953ccbebff97b54ad05d002aa3635f633b9c53cd666f7ce9b8bc44704f1fa048b9a49b55371ab2d9e9d667d1efe2ef1514bcd513"
}
